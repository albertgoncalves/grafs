#!/usr/bin/env bash

if [ "$(uname -s)" = "Darwin" ]; then
    alias ls='ls --color=auto'
    alias ll='ls -l'
else
    alias open="xdg-open"
fi

export WD
export GOPATH
WD=$(pwd)
GOPATH="$WD/go"

for f in "$WD/out" "$GOPATH/out"; do
    if [ ! -d "$f" ]; then
        mkdir "$f"
    fi
done

if [ ! -f "$GOPATH/.init" ]; then
    go get -v gonum.org/v1/plot
    go get -v golang.org/x/lint/golint
    go get -v github.com/cheekybits/genny
    touch "$GOPATH/.init"
fi

gofmts() {
    if gofmt -w -s -e "$1"; then
        awk '{ gsub(/\t/, "    "); print }' < "$1" > tmp
        cat tmp > "$1"
        rm tmp
    fi
}

golint() {
    "$GOPATH/bin/golint" "$1" \
        | sed -n -e '/exported .* should have comment.* or be unexported/!p'
}

goall() {
    cd "$GOPATH" || exit
    go vet
    find . -type f -name '*.go' \
        -not -path "*github.com*" \
        -not -path "*gonum.org*" \
        -not -path "*golang.org*" \
        -exec bash -c 'echo "$0"; golint "$0"; gofmts "$0"' {} \;
}

export -f gofmts
export -f golint
export -f goall
