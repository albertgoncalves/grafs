#!/usr/bin/env bash

if [ "$(uname -s)" = "Darwin" ]; then
    alias ls='ls --color=auto'
    alias ll='ls -l'
else
    alias open="xdg-open"
fi

export WD
export GOPATH
WD=$(pwd)
GOPATH="$WD/go"

for f in "$WD/out" "$WD/go/out"; do
    if [ ! -d $f ]; then
        mkdir $f
    fi
done

if [ ! -f "$WD/go/.init" ]; then
    go get -v gonum.org/v1/plot
    touch "$WD/go/.init"
fi

gofmts() {
    if gofmt -w -s -e "$1"; then
        awk '{ gsub(/\t/, "    "); print }' < "$1" > tmp
        cat tmp > "$1"
        rm tmp
    fi
}

export -f gofmts
