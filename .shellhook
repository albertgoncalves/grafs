#!/usr/bin/env bash

if [ "$(uname -s)" = "Darwin" ]; then
    alias ls='ls --color=auto'
    alias ll='ls -l'
else
    alias open="xdg-open"
fi

export WD
WD=$(pwd)

for f in bin build out; do
    if [ ! -d "$WD/$f" ]; then
        mkdir "$WD/$f"
    fi
done

lint() {
    hlint "$1"
    for f in "$1"/*.hs; do
        echo "$f"
        hindent --indent-size 4 --sort-imports --line-length 78 "$f"
    done
    echo ""
}

alias flake8="flake8 --ignore=E722"
